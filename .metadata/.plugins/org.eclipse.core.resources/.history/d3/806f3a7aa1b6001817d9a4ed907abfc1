-------------- HibernateTP01 ---------------
hbm is the Hibernate Mapping file

---------------- Create DB -----------------
create table EMPLOYEE (
	id INT NOT NULL auto_increment,
	first_name VARCHAR(20) default NULL,
	last_name  VARCHAR(20) default NULL,
	salary     INT  default NULL,
	PRIMARY KEY (id)
);

select *
from employee;

